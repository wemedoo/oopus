@using sReportsV2.Common.Enums;
@using sReportsV2.Common.Constants;
@using sReportsV2.Common.Extensions;

<div class="d-flex">
    <div class="d-flex main-filter mb-2">
        <div class="filter-item advanced-filter-item margin-right-10 advanced-max-width">
            <div class="label filter-label">
                Contains
            </div>
            <input type="text" class="filter-input" id="requestContainsTemp">
        </div>
        <div class="filter-item advanced-filter-item margin-right-10 advanced-max-width">
            <div class="label filter-label">
                Http Status Code
            </div>
            <select class="filter-input arrow-select" id="httpStatusCodeTemp">
                <option value=""></option>
                @foreach (KeyValuePair<short, string> option in ViewBag.HttpStatusCodes)
                {
                    <option id="HttpStatusCode_@option.Key" data-display="@option.Value" value="@option.Key" @(ViewBag.FilterData.HttpStatusCode == option.Key ? "selected" : "")>@option.Value</option>
                }
            </select>
        </div>
        <div class="advanced-filter-item filter-item margin-right-10 advanced-max-width">
            <div class="label filter-label">
                Screening Number
            </div>
            <input type="text" class="filter-input" id="screeningNumberTemp" value="@(ViewBag.FilterData != null ? ViewBag.FilterData.ScreeningNumber : "")">
        </div>
        <div class="filter-item code advanced-filter-item margin-right-10 advanced-max-width w-25">
            <div class="label filter-label">
                @sReportsV2.Cache.Resources.TextLanguage.Response
            </div>
            <div class="filter-input radio display-flex">
                <label class="form-checkbox-label margin-reset">
                    <input class="form-checkbox-field" type="checkbox" id="showOnlyUnsuccessful" />
                    <i class="form-checkbox-button custom-checkbox"></i>
                    <span class="organization-types ml-2">
                        @sReportsV2.Cache.Resources.TextLanguage.InError
                    </span>
                </label>
            </div>
        </div>

        <div class="filter-item border-0 margin-top-15" style="margin-right:10px;">
            <div class="button-wrapper-filter button-filter" id="submitFilterButton">
                <button class="btn btn-filter-primary w-100 h-100 float-right" onclick="mainFilter()"> @sReportsV2.Cache.Resources.TextLanguage.Filter</button>
            </div>
        </div>
        <div id="advancedId" class=" filter-item border-0 margin-top-15 margin-right-5">
            <div class="button-wrapper-filter" id="submitFilterButton">
                <button class="btn w-100 h-100 float-right font-size-14 btn-advanced-link" onclick="advancedFilterModal(event)"><img alt="" class="display-none" src="/css/img/icons/advanced_filter.svg">@sReportsV2.Cache.Resources.TextLanguage.Advanced_filter</button>
            </div>
        </div>
    </div>
</div>

<div id="filterElements" class="d-flex">

</div>
