@using sReportsV2.Common.Extensions;
@using sReportsV2.Common.Constants;

@{
    var userCookieData = ViewBag.UserCookieData;
}

<div class="d-flex">
    <div class="d-flex main-filter mb-2">

        <div class="filter-item advanced-filter-item margin-right-10 advanced-max-width">
            <div class="label filter-label">
                @sReportsV2.Cache.Resources.TextLanguage.CodeSetId
            </div>
            <input type="text" class="filter-input" id="codeSetId">
        </div>
        <div class="filter-item advanced-filter-item margin-right-10 advanced-max-width">
            <div class="label filter-label">
                @sReportsV2.Cache.Resources.TextLanguage.CodeSetName
            </div>
            <input type="text" class="filter-input" id="codeSetDisplay">
        </div>
        <div class="filter-item advanced-filter-item margin-right-10 active-inative-filter-width">
            <div class="label filter-label">
                @sReportsV2.Cache.Resources.TextLanguage.Activity
            </div>
            <div class="filter-input radio display-flex">
                <label class="form-checkbox-label margin-reset">
                    <input class="form-checkbox-field" type="checkbox" id="showActive" />
                    <i class="form-checkbox-button custom-checkbox"></i>
                    <span class="organization-types ml-2">
                        @sReportsV2.Cache.Resources.TextLanguage.Active
                    </span>
                </label>
                <label class="form-checkbox-label reset-margin">
                    <input class="form-checkbox-field" type="checkbox" id="showInactive" />
                    <i class="form-checkbox-button custom-checkbox"></i>
                    <span class="organization-types ml-2">
                        @sReportsV2.Cache.Resources.TextLanguage.Inactive
                    </span>
                </label>
            </div>
        </div>
        <div class="filter-item border-0 margin-top-15" style="margin-right:10px;">
            <div class="button-wrapper-filter button-filter" id="submitFilterButton">
                <button class="btn btn-filter-primary w-100 h-100 float-right" onclick="advanceFilter()">@sReportsV2.Cache.Resources.TextLanguage.Apply </button>
            </div>
        </div>
    </div>
</div>
<div id="filterElements" class="d-flex">

</div>