    <span style="padding-left: 10px">@sReportsV2.Cache.Resources.TextLanguage.Audit_Trail_and_History_of_Changes</span>
</div>

<div class="d-flex">
    <div class="d-flex main-filter mb-4">
        <div class="advanced-filter-item margin-right-10 advanced-max-width global-form-history-filters">
            <div class="label filter-label color-black">
                @sReportsV2.Cache.Resources.TextLanguage.Field_Label
            </div>
            <input id="FieldInstanceHistorySearchInput" type="text" class="filter-input field-history-input-search" placeholder="@sReportsV2.Cache.Resources.TextLanguage.Filter_Fields" onkeydown="pressButtonOnEnterKey(event, 'FieldInstanceHistoryFilterButton')">
        </div>

        <div class="advanced-filter-item filter-item margin-right-10 advanced-max-width field-history-user-select2-container">
            <div class="label filter-label color-black">
                @sReportsV2.Cache.Resources.TextLanguage.User
            </div>
            <select id="FieldInstanceHistoryUserSelect" class="filter-input">
                <option value=""></option>
            </select>
        </div>

        <div class="advanced-filter-item filter-item margin-right-10 advanced-max-width global-form-history-filters">
            <div class="label filter-label color-black">
                @sReportsV2.Cache.Resources.TextLanguage.Sort_FieldSet_By
            </div>
            <select id="FieldInstanceHistorySortSelect" name="FieldInstanceHistorySortSelect" class="filter-input arrow-select">
                <option disabled value=""> @sReportsV2.Cache.Resources.TextLanguage.SelectOption</option>
                <option selected value="ascending">@sReportsV2.Cache.Resources.TextLanguage.From_A_to_Z</option>
                <option value="descending">@sReportsV2.Cache.Resources.TextLanguage.From_Z_to_A</option>
            </select>
        </div>

        <div class="filter-item border-0 margin-top-15 mr-4">
            <div class="button-wrapper-filter button-filter" id="FieldInstanceHistoryFilter">
                <button id="FieldInstanceHistoryFilterButton" class="btn btn-filter-primary w-100 h-100 float-right"> @sReportsV2.Cache.Resources.TextLanguage.Filter</button>
            </div>
        </div>

    </div>
</div>
