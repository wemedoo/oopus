@using sReportsV2.Common.Helpers
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content modal-content-upload">
            <div class="float-right filter-close-btn">
                <img alt="" class="close-modal" src="/css/img/icons/close_black.svg">
            </div>
            <form method="post" enctype="multipart/form-data" onsubmit="uploadPDF(event)">

                <div class="modal-body upload-modal-body">
                    <div class="d-flex advanced-filter-header documents-header upload-header">
                        <img alt="" class="mr-3" src="/css/img/icons/pdf_upload.svg"> @sReportsV2.Cache.Resources.TextLanguage.UploadPdf
                    </div>

                    <div class="fileUpload input.upload position-relative">
                        <input id="uploadFile" class="f-input" placeholder="@sReportsV2.Cache.Resources.TextLanguage.NoContent" />
                        @*<button type="button" class="fileUpload btn btn-primary upload-button">@sReportsV2.Cache.Resources.TextLanguage.ChooseFile</button>*@
                        <input id="file" name="file" type="file" class="upload upload-input" />
                        <img alt="" src="/css/img/icons/browse.svg" class="upload-plus-btn">

                    </div>
                </div>
                <div class="d-flex position-relative margin-top-20">
                    <div class="button-wrapper-filter filter-button float-right d-flex unset-width" id="submitFilterButton" style="right:50px;">
                        <a class="btn advanced-cancel mr-2" data-dismiss="modal" aria-label="Close">
                            @sReportsV2.Cache.Resources.TextLanguage.Cancel
                        </a>
                        <button id="uploadSubmit" disabled class="btn btn-filter-primary w-100 h-100" type="submit">@sReportsV2.Cache.Resources.TextLanguage.UploadFile</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@Html.Raw(ScriptHelper.RenderScript(Url.Content("~/js/sReports/commonModal/uploadModal.js"), "", ""))