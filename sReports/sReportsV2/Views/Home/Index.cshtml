@using sReportsV2.Common.Helpers
@{
    ViewBag.Title = "Home Page";
}
<div class="element-background-white" style="padding-bottom:unset;">
    @await Html.PartialAsync("Breadcrumb", new ViewDataDictionary(ViewData) { { "activeLevel", 0 } })
</div>
<div class="widgets-container">
    <div class="element-background-white border-beetwen-widgets">
        <div class="widget first">
            <div class="users-by-organization-header">
                @sReportsV2.Cache.Resources.TextLanguage.Documents_per_group
            </div>
            <div class="widget-content">
                <canvas id="documentsPerThesaurus" width="200" height="200"></canvas>
            </div>
        </div>
    </div>

    <div class="element-background-grey element-background-grey-height-overview pt-2 overview-grey-widgets">
        <div class="widget right">
            <div class="users-by-organization-header">
                @sReportsV2.Cache.Resources.TextLanguage.Total_thesaurus_entries
            </div>
            <div class="widget-content widget-border background-white">
                <div class="items d-flex">
                    <div class="total-item display-block">
                        <img alt="" class="overview-icon" src="/css/img/icons/thesaurus_entries.svg">
                        <div class="total-label">@sReportsV2.Cache.Resources.TextLanguage.ThesaurusEntries</div>
                        <div id="totalThesaurusEntries" class="total-number"></div>
                    </div>
                    <div class="items-line"></div>
                    <div class="total-item">
                        <img alt="" class="overview-icon" src="/css/img/icons/conected_with_ulms.svg" style="width:42px;">
                        <div class="total-label">@sReportsV2.Cache.Resources.TextLanguage.ConnectedWithUmls</div>
                        <div id="totalUmls" class="total-number"></div>


                    </div>
                </div>
            </div>
        </div>
        <div class="widget">
            <div class="users-by-organization-header">
                @sReportsV2.Cache.Resources.TextLanguage.Users_by_organization
            </div>
            <div class="widget-content widget-border background-white" id="organizationUsersCount">

            </div>
        </div>
    </div>
    <!--<div class="widget right">
        <div class="widget-header">
            Documents per Group
        </div>
        <div class="widget-content">

        </div>
    </div>-->
</div>
@Html.Raw(ScriptHelper.RenderScript("https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js", "", ""))
@Html.Raw(ScriptHelper.RenderScript(Url.Content("~/js/sReports/home/overview.js"), "", ""))