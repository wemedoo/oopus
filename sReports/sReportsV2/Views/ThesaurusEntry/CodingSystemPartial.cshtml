@using sReportsV2.Common.Helpers
<div class="custom-modal fade umls-modal-open" id="umlsModal" tabindex="-1" role="dialog" aria-labelledby="umlsModal" aria-hidden="true">
    <div class="modal-dialog custom-modal-body umls-modal-width" role="document">
        <div class="umls-modal">

            <div class="close-custom-modal-button">
            </div>
            <div class="custom-modal-title">
                <img alt="" src="/css/img/icons/search_ulms.svg" style="padding-right: 6px;" />
                @sReportsV2.Cache.Resources.TextLanguage.UMLS_Search
            </div>

            <div class="advanced-filter-item input-margin search-umls-concept">
                <input class="filter-input padding-left-15" type="text" id="umlsTerm" name="umlsTerm" value="" required placeholder="@sReportsV2.Cache.Resources.TextLanguage.EnterUmls" />
                <img alt="" class="search-img search-pointer" src="/css/img/icons/search_green.svg" onclick="searchByTerm(true)">
            </div>

            <div class="select-umls-concept">
                *@sReportsV2.Cache.Resources.TextLanguage.SelectUMLSConcept
            </div>

            @await Html.PartialAsync("~/Views/Umls/ConceptsTable.cshtml")

            <div class="athoms-and-definitions">

                <div class="concept-details-container concept-details">
                    <div class="concept-definition">
                        <div class="select-definition-concept">
                            *@sReportsV2.Cache.Resources.TextLanguage.SelectOneDefinitions
                        </div>
                        <div id="definitionsData" class="definition-data umls-clear-content">
                            <div class="list-group-item single-definition">
                                @sReportsV2.Cache.Resources.TextLanguage.No_Result
                            </div>
                        </div>
                    </div>
                </div>

                <div class="atoms">
                    <div class="athoms">
                        @sReportsV2.Cache.Resources.TextLanguage.Atoms
                    </div>
                    <div id="atomsData">
                        <div class="table-responsive umls-clear-content">
                            <table class="table table-striped table-border">
                                <thead class="color-header">
                                    <tr class="table-header-row">
                                        <th class="unset-borders">@sReportsV2.Cache.Resources.TextLanguage.Name.ToUpper()</th>
                                        <th class="unset-borders">@sReportsV2.Cache.Resources.TextLanguage.RootSource.ToUpper()</th>
                                        <th class="unset-borders" style="padding-right: 5px">@sReportsV2.Cache.Resources.TextLanguage.Language.ToUpper()</th>
                                        <th class="unset-borders">UI</th>
                                    </tr>
                                </thead>
                            </table>
                            <div class="atoms-no-result">
                                <img alt="" class="margin-" src="/css/img/icons/no_results.svg">
                                <br>
                                <div class="no-result-text">@sReportsV2.Cache.Resources.TextLanguage.NoResultFound</div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="button-partial umls-button">
                <button class="submit-patient right-button" type="button" onclick="confirmUmlsSelection()" style="outline: none;">
                    <span class="submit-patient-info">@sReportsV2.Cache.Resources.TextLanguage.Confirm_selection</span>
                </button>
                <i class="angle-left fas fa-angle-left"></i>
                <div class="text-underline right-button" type="button" data-dismiss="modal">
                    <span class="back">@sReportsV2.Cache.Resources.TextLanguage.Back</span>
                </div>
            </div>

        </div>
    </div>
</div>
@Html.Raw(ScriptHelper.RenderScript(Url.Content("~/js/sReports/thesaurus/umlsCodingSystem.js"), "", ""))